.audio-container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.audio-header {
  display: flex;
  margin-top:20rpx;
  flex-direction: row;
  justify-content: center;
  width: 750rpx;
  height: 48rpx;
}

.audio-tab {
  position: relative;
  margin-left: 80rpx;
  font-size: 32rpx;
   line-height: 64rpx; 
   /* width: 76rpx;  */
   height: 64rpx; 
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: #cbcbcb;
}

.audio-tab-line {
  /* border-bottom: 4rpx solid #bcb9fe; */
  color: #000;
}

.audio-tab-first {
  margin-left: 0;
}

.audio-media {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  margin-top: 68rpx;
  width: 750rpx;
  height: 658rpx;
  /* background-image: url("../../images/background@3x.png") */
}

.audio-media-bg {
  position: absolute;
  width: 750rpx;
  height: 658rpx;
}

.audio-image-box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 476rpx;
  height: 476rpx;
}

.cd-bg {
  position: absolute;
  width: 476rpx;
  height: 476rpx;
  z-index: 0;
}

.audio-cover {
  position: relative;
  z-index: 1;
  border-radius: 50%;
  width: 336rpx;
  height: 336rpx;
}

.audio-name {
  margin-top: 72rpx;
  width: 400rpx;
  font-size: 42rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.audio-detail {
  margin-top: 24rpx;
  width: 550rpx;
  font-size: 28rpx;
  text-align: center;
  color: #a894ff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.audio-operation-box {
  display: flex;
  flex-direction: row;
  margin-top:5rpx;
  padding: 0 122rpx;
  height: 200rpx;
}

.audio-operation {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.audio-model {
  width: 72rpx;
  height: 72rpx;
}

.audio-model-box{
  position: relative;
}

.audio-model-tab{
  position: absolute;
  left: 0;
  top: 0;
}
.canvas-box{
  position:relative;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width:200rpx; 
  height:200rpx;
}
.audio-operation-btn {
  /* position: relative;
  top: 4px;
  left: 4px; */
  width: 178rpx;
  height:178rpx
}

.audio-load {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 750rpx;
  height: 64rpx;
}

.load-image {
  width: 64rpx;
  height: 64rpx;
}

.audio-load-ele{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.audio-load-text{
  font-size: 28rpx;
  color: #9fe3f4;
}

.toast_mask { 
 opacity: 0; 
 width: 100%; 
 height: 100%; 
 overflow: hidden; 
 position: fixed; 
 top: 0; 
 left: 0; 
 z-index: 888; 
} 
/*toast*/
.toast_content_box { 
 display: flex; 
 width: 100%; 
 justify-content: center; 
 /* align-items: center;  */
 position: absolute;
 bottom: 400rpx; 
 z-index: 999; 
} 
.toast_content { 
 padding: 21rpx 51rpx; 
 background: rgba(79, 79, 79, 0.7); 
 border-radius: 50rpx; 
} 
.toast_content_text { 
 height: 100%; 
 width: 100%; 
 color: #fff; 
 font-size: 28rpx; 
 text-align: center; 
} 
.line{
  position: absolute;
  left:8rpx;
  height: 6rpx;
  width: 95%;
  background-color: #bcb9fe;
}